@model IEnumerable<VelosCar.Models.Combustible>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Opciones</th>
                    </tr>
                </thead> 
                <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                       <tr>
                            <td>@item.Id</td>
                            <td>@item.Nombre</td>
                            <td>
                                <a href="@Url.RouteUrl("ver_combustible", new { id = item.Id})" title="Detalle Combustible"><span class="glyphicon glyphicon-eye-open"></span></a>
                                <a href="@Url.RouteUrl("editar_combustible", new { id = item.Id})" title="Editar Combustible"><span class="glyphicon glyphicon-edit"></span></a>
                                <a href="@Url.RouteUrl("vehiculos_combustible", new { id = item.Id})" title="Vehiculos"><span class="glyphicon glyphicon-road"></span></a>
                            </td>
                        </tr>   
                    }
                </tbody>
            </table>   
        </div>
        <div class="col-md-12 text-center">
            <ul class="pagination" id="myPager"></ul>
        </div>
    </div>
</div>        
@model VelosCar.Models.Combustible
<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <div class="input-group bg">
            <span class="input-group-addon">Nombre</span>
            <input type="text" class="form-control bg" name="Nombre" value="@Model.Nombre" disabled="disabled">
        </div><!--Fin input-group-->
    </div>
    <div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Opciones</th> 
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var item in ViewBag.vehiculos)
                    {
                       <tr>
                           <td>@item.Id</td>
                           <td>@item.Patente</td>
                           <td>@item.Modelo</td>
                           <td>@item.Color</td>
                           <td>@item.Anio</td>
                           <td>@item.CantidadPuertas</td>
                           <td>@item.CantidadPasajeros</td>
                           <td>@item.Cilindrada</td>
                           <td>@item.FrenosAbs</td>
                           <td>@item.AirbagLaterales</td>
                           <td>@item.AirbagFrontales</td>
                           <td>@item.Marca</td>
                           <td>
                                <a href="@Url.RouteUrl("ver_vehiculo", new { id = item.Id })" title="Detalle Combustible"><span class="glyphicon glyphicon-eye-open"></span></a>
                                <a href="@Url.RouteUrl("editar_vehiculo", new { id = item.Id })" title="Editar Combustible"><span class="glyphicon glyphicon-edit"></a>
                                <a href="#" title="Vehiculos"><span class="glyphicon glyphicon-road"></a>
                            </td>
                        </tr>   
                    }
                </tbody>
            </table>   
        </div>
        <div class="col-md-12 text-center">
            <ul class="pagination" id="myPager"></ul>
        </div>
    </div>
</div><!--Fin row-->
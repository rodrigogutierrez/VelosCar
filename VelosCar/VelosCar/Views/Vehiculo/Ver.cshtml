@model VelosCar.Models.Vehiculo

<div class="container">
  <div class="row">
    <div class="col-lg-3">
        <a href="/Content/img/@(Model.Id).jpg" data-toggle="lightbox"><img src="/Content/img/@(Model.Id)_th.jpg" alt="Imagen del auto" /></a>
    </div>
    
    <div class="col-lg-9">
        <form class="vehiculo form-horizontal">
            <fieldset>
                <div class="control-group">
                    <label class="control-label">Marca:</label>
                    <div class="controls">
                        <input class="input-xlarge" type="text" value="@Model.Marca" disabled>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Modelo:</label>
                    <div class="controls">
                        <input class="input-xlarge" type="text" value="@Model.Modelo" disabled>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Color:</label>
                    <div class="controls">
                        <input class="input-xlarge" type="color" value="@Model.Color" disabled>
                    </div>
                </div>      
                <div class="control-group">
                    <label class="control-label">Año:</label>
                    <div class="controls">
                        <input class="input-xlarge" type="text" value="@Model.Anio" disabled> 
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
      <button type="button" class="btn btn-default right">Reservar</button>
  </div>
  
  <hr>

</div> <!-- /container -->
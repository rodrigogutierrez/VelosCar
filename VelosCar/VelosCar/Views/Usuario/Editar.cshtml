@model VelosCar.Models.Usuario

<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <form class="form-horizontal" method="post" action="@Url.RouteUrl("actualizar_usuario", new { id = Model.Id })">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="input-group bg">
                <span class="input-group-addon">Rut / Pasaporte</span>
                <input type="text" class="form-control bg" name="RutPasaporte" value="@Model.RutPasaporte" />
            </div><!--Fin input-group-->
            <div class="input-group bg">
                <span class="input-group-addon">Nombres</span>
                <input type="text" class="form-control bg" name="Nombres" value="@Model.Nombres" />
            </div><!--Fin input-group-->
        
            <div class="input-group bg">
                <span class="input-group-addon">Apellido Paterno</span>
                <input type="text" class="form-control bg" name="ApellidoPaterno" value="@Model.ApellidoPaterno" />
            </div><!--Fin input-group-->
        
            <div class="input-group bg">
                <span class="input-group-addon">Apellido Materno</span>
                <input type="text" class="form-control bg" name="ApellidoMaterno" value="@Model.ApellidoMaterno" />
            </div><!--Fin input-group-->
        
            <div class="input-group bg">
                <span class="input-group-addon">Email</span>
                <input type="text" class="form-control bg" name="Email" value="@Model.Email" />
            </div><!--Fin input-group-->

            <div class="input-group bg">
                <span class="input-group-addon">País</span>
                <input type="text" class="form-control bg" name="Pais" value="@Model.Pais" />
            </div><!--Fin input-group-->

            <div class="input-group bg">
                <span class="input-group-addon">Hora Inicio Atencion</span>
                <input type="tel" class="form-control bg" name="Telefono" value="@Model.Telefono" />
            </div><!--Fin input-group-->
            <div class="input-group bg">
                <span class="input-group-addon">Contraseña</span>
                <input type="password" class="form-control bg" name="Contrasena" value="@Model.Contrasena" />
            </div><!--Fin input-group-->

            <div class="input-group bg">
                <span class="input-group-addon">Estado</span>
                <input type="text" class="form-control bg" name="Estado" value="@Model.Estado" />
            </div><!--Fin input-group-->

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Actualizar</button>
                <button type="reset" class="btn">Limpiar</button>
            </div>
        </form><!--Fin form-->
    </div>
</div><!--Fin row-->
@model IEnumerable<VelosCar.Models.Usuario>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Rut/Pasaporte</th>
                        <th>Nombres</th>
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>
                        <th>Email</th>
                        <th>Pais</th>
                        <th>Telefono</th>
                        <th>Contraseña</th>
                        <th>Estado</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                       <tr>
                           <td>@item.Id</td>
                           <td>@item.RutPasaporte</td>
                           <td>@item.Nombres</td>
                           <td>@item.ApellidoPaterno</td>
                           <td>@item.ApellidoMaterno</td>
                           <td>@item.Email</td>
                           <td>@item.Pais</td>
                           <td>@item.Telefono</td>
                           <td>@item.Contrasena</td>
                           <td>@item.Estado</td>
                           <td>
                               <a href="@Url.RouteUrl("ver_usuario", new { id = item.Id })"><span class="glyphicon glyphicon-eye-open"></span></a>
                               <a href="@Url.RouteUrl("editar_usuario", new { id = item.Id })"><span class="glyphicon glyphicon-edit"></span></a>
                           </td>
                        </tr>   
                    }
                </tbody>
            </table>   
        </div>
        <div class="col-md-12 text-center">
            <ul class="pagination" id="myPager"></ul>
        </div>
    </div>
</div>        
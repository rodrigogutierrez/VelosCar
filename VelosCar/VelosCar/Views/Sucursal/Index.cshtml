@model IEnumerable<VelosCar.Models.Sucursal>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Direccion</th>
                        <th>Comuna</th>
                        <th>Region</th>
                        <th>Hora Inicio Atencion</th>
                        <th>Hora Fin Atencion</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                       <tr>
                           <td>@item.Id</td>
                           <td>@item.Nombre</td>
                           <td>@item.Direccion</td>
                           <td>@item.Comuna</td>
                           <td>@item.Region</td>
                           <td>@item.HoraInicioAtencion.ToShortTimeString()</td>
                           <td>@item.HoraTerminaAtencion.ToShortTimeString()</td>
                           <td>
                               <a href="@Url.RouteUrl("ver_sucursal", new { id = item.Id })"><span class="glyphicon glyphicon-eye-open"></span></a>
                               <a href="@Url.RouteUrl("editar_sucursal", new { id = item.Id })"><span class="glyphicon glyphicon-edit"></span></a>
                               <a href="@Url.RouteUrl("vehiculos_sucursal", new { id = item.Id })"><span class="glyphicon glyphicon-road"></span></a>
                           </td>
                        </tr>   
                    }
                </tbody>
            </table>   
        </div>
        <div class="col-md-12 text-center">
            <ul class="pagination" id="myPager"></ul>
        </div>
    </div>
</div>        